[
  {
    "name": "web",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "memory": 300,
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "web"
      }
    },
    "environment": [
      {
        "name": "POSTGRES_URL",
        "value": "${database_url}"
      },
      {
        "name": "POSTGRES_USER",
        "value": "${database_username}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "value": "${database_password}"
      }
    ]
  }
]

